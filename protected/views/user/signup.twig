{% extends 'views/layouts/main.twig' %}
{% block title %} {{ App.name }} - Login{% endblock %}

{% set bcs = ['Signup'] %}
{% block content %}
<h1>Sign-up</h1>
<p>Please fill out the following form with your login credentials:</p>
<div class="form">
    {{ CHtml.form()|raw }}
    {% set form = this.beginWidget('CActiveForm', {
	'id':'signup-form',
	'enableClientValidation':true,
	'clientOptions':{
		'validateOnSubmit':true,
	},
}) %}


    <p class="note">Fields with <span class="required">*</span> are required.</p>

    <p class="help">Logins should start with least 2 characters and may consist of letters, numbers, or the
        underscore.</p>
    {{ CHtml.errorSummary(form)|raw }}

    <div class="row">
        {{ form.labelEx(model,'username')|raw}}
        {{ form.textField(model,'username')|raw }}
        {{ form.error(model,'username')|raw }}
    </div>

    <div class="row">
        {{ form.labelEx(model,'password')|raw }}
        {{ form.passwordField(model,'password')|raw }}
        {{ form.error(model,'password')|raw }}
    </div>

    <div class="row">
        {{ form.labelEx(model,'password_confirmation')|raw }}
        {{ form.passwordField(model,'password_confirmation')|raw }}
        {{ form.error(model,'password_confirmation')|raw }}
    </div>

    <div class="row">
        {{ form.labelEx(model,'display_name')|raw}}
        {{ form.textField(model,'display_name')|raw }}
        {{ form.error(model,'display_name')|raw }}
    </div>


    <div class="row">
        {{ form.labelEx(model,'email')|raw}}
        {{ form.textField(model,'email')|raw }}
        {{ form.error(model,'email')|raw }}
    </div>

    <div class="row buttons">
        {{ C.Html.submitButton('Sign-up')|raw }}
    </div>

    {{ void(this.endWidget()) }}

</div><!-- form -->
{% endblock %}